bool
validarfechastring(char a[30])//valida que la fecha ingresada contenga el
siguiente formato 20/10/2013                                                                                                                                                                                                                       

{                                                                                                                                                                                                                              

                int
i=0,n=strlen(a);                                                                                                                                                                                                          

                if(n!=10)                                                                                                                                                                                                              

return false;                                                                                                                                                                                                                       

                for(i=0;
i<n; i++)                                                                                                                                                                                                               

                {                                                                                                                                                                                                              

                                if(i==0
|| i== 1 || i==3 || i== 4 || i==6 || i==7 || i==9 || i==8)                                                                                                                                                                                    

                                                if(a[i]<
48 || a[i]>57 )                                                                                                                                                                     

                                                                return
false;                                                                                                                                                       

                                if(i==2
|| i==5 )                                                                                                                                                                                 

                                                if(a[i]!='/')                                                                                                                                                                           

                                                                return
false;                                                                                                                                                       

                }                                                                                                                                                                                                              

                return
true;                                                                                                                                                                                                        

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

