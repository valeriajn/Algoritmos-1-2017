bool
validarContrasenha(char cad[4])                                                                                                                                                                                                                     

{                                                                                                                                                                                                                              

                char *cadena="abc";                                                                                                                                                                                                      

                if(strncmp(cadena,cad,4)==0)                                                                                                                                                                                                    

                {                                                                                                                                                                                                              

                                return
true;                                                                                                                                                                                        

                }                                                                                                                                                                                                              

                else                                                                                                                                                                                                        

                {                                                                                                                                                                                                              

                                return
false;                                                                                                                                                                                       

                }                                                                                                                                                                                                              

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

int main()                                                                                                                                                                                                                            

{                                                                                                                                                                                                                              

                int
opcion;                                                                                                                                                                                                           

                int id;                                                                                                                                                                                                     

                char contra[4];                                                                                                                                                                                                  

                regAdministrador regA;                                                                                                                                                                                                

                int rev;                                                                                                                                                                                                  

                /*do                                                                                                                                                                                                      

                {                                                                                                                                                                                                              

                                cout<<"Introduzca
Id De usuario: "<<endl;                                                                                                                                                                                          

                                cin>>id;                                                                                                                                                                                                

                                regV=verificarContrasenha(id);                                                                                                                                                                                 

                                cout<<"Introduzca
contrasenha: "<<endl;                                                                                                                                                                                            

                                do                                                                                                                                                                                           

                                {                                                                                                                                                                                              

                                gets(contra);                                                                                                                                                                                      

                                                                                                                                                                                                                                

                                }while(strlen(contra)==0);                                                                                                                                                                                           

                                fflush(stdin);                                                                                                                                                                                      

                                rev=strcmp(regV.contrasenha,contra);                                                                                                                                                                                 

                                                                                                                                                                                                                                

                }while(rev!=0);*/                                                                                                                                                                                                             

                                                                                                                                                                                                                                

                cout<<"Introduzca Id Del
Administrador: "<<endl;                                                                                                                                                                                                           

                cin>>id;                                                                                                                                                                                                                

                cout<<"Introduzca
contrasena: "<<endl;                                                                                                                                                                                                              

                do                                                                                                                                                                                                           

                {                                                                                                                                                                                                              

