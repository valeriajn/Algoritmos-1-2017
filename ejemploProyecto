void
modificarRegistroAdministrador(char nomArch[15],int nroReg)                                                                                                                                                                                                                        

{                                                                                                                                                                                                                              

//modificar
el contenido de un registro del archivo                                                                                                                                                                                                                          

                FILE *ptr;                                                                                                                                                                                                             

                regAdministrador
reg;                                                                                                                                                                                                   

                ptr=fopen(nomArch,"r+b");                                                                                                                                                                                                       

                if(ptr==NULL)
cout<<"el archivo no existe....";                                                                                                                                                                                                   

                else                                                                                                                                                                                                        

                {                                                                                                                                                                                                              

                                fseek(ptr,(nroReg-1)*sizeof(reg),SEEK_SET);                                                                                                                                                                                     

                                fread(&reg,sizeof(struct
regAdministrador),1,ptr);                                                                                                                                                                                          

                                if(feof(ptr))
cout<<"el registro no existe...";                                                                                                                                                                                       

                                else                                                                                                                                                                                        

