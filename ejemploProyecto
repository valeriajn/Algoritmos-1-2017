//VALIDACIONES
GENERALES                                                                                                                                                                                                                     

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

regAdministrador
verificarContrasenha(int idAdm)                                                                                                                                                                                                                          

{                                                                                                                                                                                                                              

FILE *ptr;                                                                                                                                                                                                                             

regAdministrador reg;                                                                                                                                                                                                                   

ptr=fopen("Administrador.dat","rb");                                                                                                                                                                                                                    

if(ptr!=NULL)                                                                                                                                                                                                                     

{                                                                                                                                                                                                                              

fread(&reg,sizeof(reg),1,ptr);                                                                                                                                                                                                                    

while(!feof(ptr) && reg.IdAdm!=idAdm)                                                                                                                                                                                                                              

{                                                                                                                                                                                                                              

                fread(&reg,sizeof(reg),1,ptr);                                                                                                                                                                                                    

}                                                                                                                                                                                                                              

}                                                                                                                                                                                                                              

return reg;                                                                                                                                                                                                                          

fclose(ptr);                                                                                                                                                                                                                         

}                                                                                                                                                                                                                              

