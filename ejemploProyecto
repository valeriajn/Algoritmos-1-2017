bool bisiesto(int x)                                                                                                                                                                                                                          

{                                                                                                                                                                                                                              

                if
(x%100 == 0)                                                                                                                                                                                                  

                {                                                                                                                                                                                                              

                                if((x/100)%4
== 0)                                                                                                                                                                                            

                                                return
true;                                                                                                                                                                        

                                else                                                                                                                                                                                        

                                                return
false;                                                                                                                                                                       

                }                                                                                                                                                                                                              

                else                                                                                                                                                                                                        

                {                                                                                                                                                                                                              

                                if(x%4 == 0)                                                                                                                                                                                        

                                                return
true;                                                                                                                                                                        

                                else                                                                                                                                                                                        

                                                return
false;                                                                                                                                                                       

                }                                                                                                                                                                                                              

}                                                                                                                                                                                                                              

fecha
sacarfechaenteros(char a[30])                                                                                                                                                                                                                       

{                                                                                                                                                                                                                              

                fecha f;                                                                                                                                                                                                 

                f.dia=f.mes=f.anho=0;                                                                                                                                                                                                  

                if(strlen(a)==10)                                                                                                                                                                                                               

                                sscanf(a,"%d/%d/%d",&f.dia,&f.mes,&f.anho);                                                                                                                                                                                                

                return
f;                                                                                                                                                                                                               

}                                                                                                                                                                                                                              

bool dia_valido(int d,int m,int s){                                                                                                                                                                                                                              

                if(d<1){                                                                                                                                                                                                 

                                return
false;                                                                                                                                                                                       

                }                                                                                                                                                                                                              

                if((m==1||m==3||m==5||m==7||m==8||m==10||m==12)){                                                                                                                                                                                                   

                                if(d>=32){                                                                                                                                                                                            

                                                return
false;                                                                                                                                                                       

                                                }                                                                                                                                                                              

                }                                                                                                                                                                                                              

                if((m==4||m==6||m==9||m==11)){                                                                                                                                                                                                      

                                if(d>=31){                                                                                                                                                                                            

                                                return
false;                                                                                                                                                                       

                                }                                                                                                                                                                                              

                }                                                                                                                                                                                                              

                if(m==2&&bisiesto(s)){                                                                                                                                                                                                 

                                if(d>29){                                                                                                                                                                                              

                                                return
false;                                                                                                                                                                       

                                }                                                                                                                                                                                              

                }                                                                                                                                                                                                              

                if(m==2&&!bisiesto(s)){                                                                                                                                                                                                               

                                if(d>28){                                                                                                                                                                                              

                                                return
false;                                                                                                                                                                       

                                }                                                                                                                                                                                              

                }                                                                                                                                                                                                              

return true;                                                                                                                                                                                                                        

}                                                                                                                                                                                                                              

bool
validarfecha(fecha f)                                                                                                                                                                                                                            

{                                                                                                                                                                                                                              

                if(f.anho<2000)                                                                                                                                                                                                 

                                return
false;                                                                                                                                                                                       

                if(f.mes<1
|| f.mes>12)                                                                                                                                                                                                                

                                return
false;                                                                                                                                                                                       

if(!dia_valido(f.dia,f.mes,f.anho))                                                                                                                                                                                                                            

                                return
false;                                                                                                                                                                                       

                return
true;                                                                                                                                                                                                        

}                                                                                                                                                                                                                              

void solicitarDatosJuego(regJuego *reg)                                                                                                                                                                                                                               

{                                                                                                                                                                                                                              

                fecha
f;                                                                                                                                                                                                 

                cout<<"IdJuego:
";                                                                                                                                                                                                          

                cin>>reg->idJuego;                                                                                                                                                                                                         

                                                                                                                                                                                                                                

                fflush(stdin);                                                                                                                                                                                                      

                do{                                                                                                                                                                                                         

                                gets(reg->fecha);                                                                                                                                                                                            

                                f=sacarfechaenteros(reg->fecha);                                                                                                                                                                                           

                                if(!validarfechastring(reg->fecha)
|| !validarfecha(f))                                                                                                                                                                                     

cout<<"Introduzca
fecha valida (dd/mm/aaaa): ";                                                                                                                                                                                                                            

                }while(!validarfechastring(reg->fecha)||
!validarfecha(f));                                                                                                                                                                                                          

                fflush(stdin);                                                                                                                                                                                                      

                reg->estado='N';                                                                                                                                                                                                              

}                                                                                                                                                                                                                              

void
adicionarRegistroJuego(char nomArch[15])                                                                                                                                                                                                                                

{//adiciona
un registro al final del archivo                                                                                                                                                                                                                              

                FILE *ptr;                                                                                                                                                                                                             

                ptr=fopen(nomArch,"ab");                                                                                                                                                                                                         

                regJuego reg;                                                                                                                                                                                                    

                solicitarDatosJuego(&reg);                                                                                                                                                                                                          

                fwrite(&reg,sizeof(struct
regJuego),1,ptr);                                                                                                                                                                                                          

                fclose(ptr);                                                                                                                                                                                                         

}                                                                                                                                                                                                                              

void
mostrarRegistroJuego(regJuego reg,int nroReg)                                                                                                                                                                                                                      

{                                                                                                                                                                                                                              

                cout<<endl<<nroReg<<"     "<<reg.fecha;                                                                                                                                                                                                            

}                                                                                                                                                                                                                              

void
modificarRegistroJuego(char nomArch[15],int nroReg)                                                                                                                                                                                                                         

{                                                                                                                                                                                                                              

//modificar
el contenido de un registro del archivo                                                                                                                                                                                                                          

                FILE *ptr;                                                                                                                                                                                                             

                regJuego
reg;                                                                                                                                                                                                    

                ptr=fopen(nomArch,"r+b");                                                                                                                                                                                                       

                if(ptr==NULL)
cout<<"el archivo no existe....";                                                                                                                                                                                                   

                else                                                                                                                                                                                                        

                {                                                                                                                                                                                                              

                                fseek(ptr,(nroReg-1)*sizeof(reg),SEEK_SET);                                                                                                                                                                                     

                                fread(&reg,sizeof(struct
regJuego),1,ptr);                                                                                                                                                                                           

                                if(feof(ptr)) cout<<"el
registro no existe...";                                                                                                                                                                                       

                                else
if(reg.estado=='N')                                                                                                                                                                                                

                                {                                                                                                                                                                                              

                                                mostrarRegistroJuego(reg,nroReg);                                                                                                                                                                        

                                                cout<<endl;                                                                                                                                                                       

                                                solicitarDatosJuego(&reg);                                                                                                                                                                          

                                                fseek(ptr,(nroReg-1)*sizeof(reg),SEEK_SET);                                                                                                                                                                     

                                                fwrite(&reg,sizeof(struct
regJuego),1,ptr);                                                                                                                                                                          

                                }                                                                                                                                                                                              

                                else
cout<<"Registro Eliminado....";                                                                                                                                                                                        

                                fclose(ptr);                                                                                                                                                                                         

}                                                                                                                                                                                                                              

getch();                                                                                                                                                                                                                                

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

void
listarArchivoJuego(char nomArch[15])                                                                                                                                                                                                                          

{                                                                                                                                                                                                                              

//muestra
todo contenido del archivo                                                                                                                                                                                                                    

                FILE *ptr;                                                                                                                                                                                                             

                regJuego
reg;                                                                                                                                                                                                    

                int
cont=0;                                                                                                                                                                                                          

                ptr=fopen(nomArch,"rb");                                                                                                                                                                                                          

                if(ptr==NULL)cout<<"El
archivo no existe...";                                                                                                                                                                                                      

                else{                                                                                                                                                                                                      

                system("cls");                                                                                                                                                                                                    

                cout<<endl<<"          JUEGO                             ";                                                                                                                                                                                                         

                cout<<endl<<"  IdJuego    
Fecha        ";                                                                                                                                                                                                   

                cout<<endl<<"==================================";                                                                                                                                                                                                   

                fread(&reg,sizeof(struct
regJuego),1,ptr);                                                                                                                                                                                                           

                while(!feof(ptr))                                                                                                                                                                                                              

                {                                                                                                                                                                                                              

                                mostrarRegistroJuego(reg,cont+1);                                                                                                                                                                                         

                fread(&reg,sizeof(struct
regJuego),1,ptr);                                                                                                                                                                                                           

                cont++;                                                                                                                                                                                                

                }                                                                                                                                                                                                              

                fclose(ptr);                                                                                                                                                                                                         

                getch();                                                                                                                                                                                                                

                }                                                                                                                                                                                                              

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

                                                                                                                                                                                                                                

void menuJuego()                                                                                                                                                                                                                           

{                                                                                                                                                                                                                              

                int
opcion=0,nreg=0;                                                                                                                                                                                                      

                do                                                                                                                                                                                                           

                {                                                                                                                                                                                                              

                                system("cls");                                                                                                                                                                                    

                                cout<<"\n   M E N U     
JUEGO   "<<endl;                                                                                                                                                                                               

                                cout<<"\n1.-
crear archivo"<<endl;                                                                                                                                                                                         

                                cout<<"\n2.-
Adicionar
Juego"<<endl;                                                                                                                                                                                   

                                cout<<"\n3.-
Modificar Juego"<<endl;                                                                                                                                                                                   

                                cout<<"\n4.-
Listar todo el archivo"<<endl;                                                                                                                                                                                         

                                cout<<"\n0.-
Salir"<<endl;                                                                                                                                                                                           

                                cin>>opcion;                                                                                                                                                                                      

                                switch(opcion)                                                                                                                                                                                  

                                {                                                                                                                                                                                              

                                                case
1: crearArchivoJuego("Juego.dat"); break;                                                                                                                                                                 

                                                case 2:
adicionarRegistroJuego("Juego.dat"); break;                                                                                                                                                                        

                                                case
3: cout<<"\nIntroducir nro de ID juego a modificar : ";
cin>>nreg; modificarRegistroJuego("Juego.dat",nreg); break;                                                                                                                                                                           

                                                case
4: listarArchivoJuego("Juego.dat");break;                                                                                                                                                                   

                                }                                                                                                                                                                                              

                }while(opcion!=0);                                                                                                                                                                                                          

}                                                                                                                                                                                                                              

