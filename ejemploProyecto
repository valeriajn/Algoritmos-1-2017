bool
validarcontrasenha(char cad[])                                                                                                                                                                                                                        

{                                                                                                                                                                                                                              

                int
i=0;                                                                                                                                                                                                  

                bool
aceptar=true;                                                                                                                                                                                                          

                while(cad[i]!='\0')                                                                                                                                                                                                            

                {                                                                                                                                                                                                              

                                if(!((cad[i]
>= 65 && cad[i] <= 90) || (cad[i] >= 97 && cad[i]
<= 122)||(cad[i]>=48 && cad[i]<=57)))                                                                                                                                                                                                

                                {                                                                                                                                                                                              

                                                aceptar=
false;                                                                                                                                                                  

                                }                                                                                                                                                                                              

                                                                                                                                                                                                                                

                }                                                                                                                                                                                                              

                return(aceptar);                                                                                                                                                                                                               

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

