void
solicitarDatosAdministrador(regAdministrador *reg)                                                                                                                                                                                                                             

{                                                                                                                                                                                                                              

                cout<<"IdAdministrador:
";                                                                                                                                                                                                         

                cin>>reg->IdAdm;                                                                                                                                                                                                           

                                                                                                                                                                                                                                

                fflush(stdin);                                                                                                                                                                                                      

                                                                                                                                                                                                                                

                cout<<"Nombre:
";                                                                                                                                                                                                         

                do                                                                                                                                                                                                           

                {                                                                                                                                                                                                              

                                gets(reg->nombre);                                                                                                                                                                                       

                }while(strlen(reg->nombre)==0);                                                                                                                                                                                                             

                                fflush(stdin);                                                                                                                                                                                      

                cout<<"Telefono:
";                                                                                                                                                                                                        

                do{                                                                                                                                                                                                         

                                gets(reg->telefono);                                                                                                                                                                                      

                }while(strlen(reg->telefono)==0);                                                                                                                                                                                                           

                                fflush(stdin);                                                                                                                                                                                      

                                                                                                                                                                                                                                

                cout<<"E-mail:
";                                                                                                                                                                                                              

                do{                                                                                                                                                                                                         

                                gets(reg->email);                                                                                                                                                                                             

                }while(strlen(reg->email)==0);                                                                                                                                                                                                  

                fflush(stdin);                                                                                                                                                                                                      

                                                                                                                                                                                                                                

                do{                                                                                                                                                                                                         

                cout<<"Contrasenha:
";                                                                                                                                                                                                                

                gets(reg->contrasenha);                                                                                                                                                                                                              

                }while(strlen(reg->contrasenha)==0);                                                                                                                                                                                                    

                fflush(stdin);                                                                                                                                                                                                      

                                                                                                                                                                                                                                

}                                                                                                                                                                                                                              

                                                                                                                                                                                                                                

