#include "stdafx.h"  
#include <iostream>  
#include "conio.h"   

using namespace std;

void main()
{
	float area,base,altura;
	cout<<"Ingrese base: ";
	cin>>base;
	if (base<=0)
		cout<<"El dato ingresado es incorrecto";
	else
	{
		cout<<"Ingrese altura: ";
		cin>>altura;
		if (altura<=0)
			cout<<"Los datos ingresados no son validos.";
		else
		{
			area=(base*altura)/2;
			cout<<"El area es: "<<area;
		}
	}
	getch(); 
}
