For:

 

#include "stdafx.h"

#include <iostream>

#include "conio.h"

 

using namespace std;

 

void main()

{

 

       int valida = 1234;

       int clave;

       cout<<"Introduzca su clave numerica: ";

       cin>>clave;

       if(clave==valida)

              cout<<"correcto";

       else

              for(int i=1;i<3;i++)

              {

                     cout<<"Introduzca su clave numerica: ";

                     cin>>clave;

              }

              getch();

}

 

 

 

Do While:

 

#include "stdafx.h"

#include <iostream>

#include "conio.h"

using namespace std;

 

void main()

{

       int valida =1234;

       int clave;

 

       do

       {

              cout<<"Introduzca su clave numerica: ";

              cin>>clave;

              if (clave != valida)

                     cout<<"No valida!"<<endl;

       }

       while (clave != valida);

       cout<<"Aceptada.";

 

       getch();

 

}

 

While:

 

#include "stdafx.h"

#include <iostream>

#include "conio.h"

using namespace std;

 

void main()

{

       int valida =1234;

       int clave;

       cout<<"Introduzca su clave numerica: ";

       cin>>clave;

      

       while(clave!=valida)

       {

              cout<<"Introduzca su clave numerica: ";

              cin>>clave;

       }

       cout<<"Correcto!";

       getch();

 

}
