#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int genero,edad,n;
	cout<<"Ingrese su genero (1 para masculino, otro numero para femenino): ";
	cin>>genero;
	if (genero==1)
	{
		cout<<"Ingrese su edad: ";
		cin>>edad;
		if (edad>=65)
			cout<<"Se puede jubilar.";
		else
			cout<<"No se puede jubilar.";
	}
	else
	{
		cout<<"Ingrese su edad: ";
		cin>>edad;
		cout<<"Ingrese el numero de hijos que tiene: ";
		cin>>n;
		edad=edad+n;
		if (edad>=60)
			cout<<"Se puede jubilar.";
		else
			cout<<"No se puede jubilar.";
	}
	getch();
}
